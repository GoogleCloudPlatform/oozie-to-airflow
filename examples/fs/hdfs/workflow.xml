<workflow-app xmlns="uri:oozie:workflow:1.0" name="fs-wf">
    <start to="fs-node"/>
    <fork name="fs-node">
        <path start="mkdir"/>
        <path start="delete"/>
        <path start="move"/>
        <path start="chmod"/>
        <path start="touchz"/>
        <path start="chgrp"/>
    </fork>
    <action name="mkdir">
        <fs>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-mkdir-1'/>
        </fs>
        <ok to="join"/>
        <error to="fail"/>
    </action>
    <action name="delete">
        <fs>
            <configuration>
                <property>
                    <name>test.property.node</name>
                    <value>${nameNode}</value>
                </property>
            </configuration>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-delete-1'/>
            <delete path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-delete-1'/>
        </fs>
        <ok to="join"/>
        <error to="fail"/>
    </action>
    <action name="move">
        <fs>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-move-1'/>
            <move source='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-move-1' target='/user/${userName}/${examplesRoot}/apps/fs/test-move-2' />
        </fs>
        <ok to="join"/>
        <error to="fail"/>
    </action>
    <action name="chmod">
        <fs>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-1'/>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-2'/>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-3'/>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-4'/>
            <chmod path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-1' permissions='777' dir-files='false' />
            <chmod path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-2' permissions='777' dir-files='true' />
            <chmod path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-3' permissions='777' />
            <chmod path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chmod-4' permissions='777' dir-files='false' >
                <recursive/>
            </chmod>
        </fs>
        <ok to="join"/>
        <error to="fail"/>
    </action>
    <action name="touchz">
        <fs>
            <touchz path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-touchz-1' />
        </fs>
        <ok to="join"/>
        <error to="fail"/>
    </action>
    <action name="chgrp">
        <fs>
            <mkdir path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chgrp-1'/>
            <chgrp path='${nameNode}/user/${userName}/${examplesRoot}/apps/fs/test-chgrp-1' group='root' />
        </fs>
        <ok to="join"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Fs workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <join name="join" to="end"/>
    <end name="end"/>
</workflow-app>
